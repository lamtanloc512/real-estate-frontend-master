<!DOCTYPE html>
<html lang="en">

<head>
  <meta charset="UTF-8" />
  <meta http-equiv="X-UA-Compatible" content="IE=edge" />
  <meta name="viewport" content="width=device-width, initial-scale=1.0" />
  <title>
    <%= title %>
  </title>
  <!-- Google Font: Source Sans Pro -->
  <link rel="stylesheet"
    href="https://fonts.googleapis.com/css?family=Source+Sans+Pro:300,400,400i,700&display=fallback" />
  <!-- Font Awesome -->
  <link rel="stylesheet" href="/plugins/fontawesome-free/css/all.min.css" />
  <!-- DataTables -->
  <link rel="stylesheet" href="/plugins/datatables-bs4/css/dataTables.bootstrap4.min.css" />
  <link rel="stylesheet" href="/plugins/datatables-responsive/css/responsive.bootstrap4.min.css" />
  <link rel="stylesheet" href="/plugins/datatables-buttons/css/buttons.bootstrap4.min.css" />
  <!-- Theme style -->
  <link rel="stylesheet" href="/dist/css/adminlte.min.css" />
  <link rel="stylesheet" href="/styles/styles.css">
</head>

<body>
  <div class="wrapper">

    <%- include('./partials/left-menu.ejs', 
              { activePage: 'employee', 
              pageHeader: 'Employee' }) %>

    <!-- Content Wrapper. Contains page content -->
    <div class="content-wrapper">
      
      <!-- Main content -->
      <section class="content pt-5">
        <div class="container-fluid">
          <h2 style="text-align: center">Employee Management</h2>
          <div class="jumbotron container">
            <div class="row form-group">
              <div class="col-sm-3">
                <label for="input-first-name">First name</label>
              </div>
              <div class="col-sm-9">
                <input type="text" id="input-first-name" placeholder="First Name" class="form-control" />
              </div>
            </div>
            <div class="row form-group">
              <div class="col-sm-3">
                <label for="input-last-name">Last name</label>
              </div>
              <div class="col-sm-9">
                <input type="text" id="input-last-name" placeholder="Last Name" class="form-control" />
              </div>
            </div>
            <div class="row form-group">
              <div class="col-sm-3">
                <label for="input-username">Username</label>
              </div>
              <div class="col-sm-9">
                <input type="text" id="input-username" placeholder="Username" class="form-control" />
              </div>
            </div>
            <div class="row form-group">
              <div class="col-sm-3">
                <label for="input-password">Default Password</label>
              </div>
              <div class="col-sm-9">
                <input type="text" id="input-password" placeholder="Passw@rd" class="form-control" readonly/>
              </div>
            </div>
            <div class="row form-group">
              <div class="col-sm-3">
                <label for="input-birth-date">Date of Birth</label>
              </div>
              <div class="col-sm-9">
                <input type="date" id="input-birth-date" name="birth-date" placeholder="Date of Birth" class="form-control" />
              </div>
            </div>
            <div class="row form-group">
              <div class="col-sm-3">
                <label for="input-email">Email</label>   
              </div>
              <div class="col-sm-9">
                <input type="text" id="input-email" name="email" placeholder="Email" class="form-control" />
              </div>
            </div>
            <div class="row form-group">
              <div class="col-sm-3">
                <label for="input-address">Address</label>
              </div>
              <div class="col-sm-9">
                <input type="text" id="input-address" name="address" placeholder="Address" class="form-control" />
              </div>
            </div>
            <div class="row form-group">
              <div class="col-sm-3">
                <label for="input-home-phone">Home Phone</label>
              </div>
              <div class="col-sm-9">
                <input type="text" id="input-home-phone" placeholder="Home Phone" class="form-control" />
              </div>
            </div>
            <div class="row form-group">
              <div class="col-sm-3">
                <label for="input-job-title">Job Title</label>
              </div>
              <div class="col-sm-9">
                <input type="text" id="input-job-title" placeholder="Job Title" class="form-control" />
              </div>
            </div>
            <div class="row form-group">
              <div class="col-sm-3">
                <label for="input-job-level">Job Level</label>
              </div>
              <div class="col-sm-9">
                <input type="text" id="input-job-level" placeholder="Job Level" class="form-control" />
              </div>
            </div>
            <div class="row form-group">
              <div class="col-sm-3">
                <label for="select-report-to">Report To</label>
              </div>
              <div class="col-sm-9">
                <select id="select-report-to" name="report-to" class="form-control">
                  <option disabled selected value>--Select Manager--</option>
                </select>
              </div>
            </div>
            <div class="row form-group">
              <div class="col-sm-3">
                <label for="select-role">Role</label>
              </div>
              <div class="col-sm-9">
                <select id="select-role" name="role" class="form-control">
                  <option disabled selected value>--Select Role--</option>
                  <option value="2">ROLE_ADMIN</option>
                  <option value="3">ROLE_SALE</option>
                </select>
              </div>
            </div>
            <div class="row form-group">
              <div class="col-sm-3">
                <label for="input-hire-date">Hire Date</label>
              </div>
              <div class="col-sm-9">
                <input type="date" id="input-hire-date" placeholder="Hire Date" class="form-control" />
              </div>
            </div>
            <div class="row form-group">
              <div class="col-sm-3">
                <label for="input-note">Notes</label>
              </div>
              <div class="col-sm-9">
                <input type="text" id="input-note" placeholder="Notes" class="form-control" />
              </div>
            </div>
            <div class="row mb-3 pull-right">
              <div class="col-sm-12 d-flex justify-content-around">
                <button class="btn btn-primary" id="btn-create-employee">
                  Create Employee
                </button>
                <button id="btn-update-employee" class="btn btn-info">
                  Update Employee
                </button>
              </div>
            </div>
          </div>
          <table class="table table-bordered table-striped table-hover text-center" id="employee-table">
            <thead>
              <tr>
                <th>ID</th>
                <th>Full name</th>
                <th>Username</th>
                <th>Date of Birth</th>
                <th>Email</th>
                <th>Address</th>
                <th>Home Phone</th>
                <th>Title</th>
                <th>Level</th>
                <th>Report To</th>
                <th>Photo</th>
                <th>Hire Date</th>
                <th>Notes</th>
                <th>Action</th>
              </tr>
            </thead>
            <tbody></tbody>
          </table>
          <!-- Modal delete employee-->
          <div class="modal fade" id="modal-delete-employee">
            <div class="modal-dialog">
              <div class="modal-content">
                <div class="modal-header">
                  <h5 class="modal-title text-danger">Delete confirmation</h5>
                  <button type="button" class="close" data-dismiss="modal" aria-label="Close">
                    <span aria-hidden="true">&times;</span>
                  </button>
                </div>
                <div class="modal-body">
                  <h6 class="text-danger">Are you sure you want to delete this employee?</h6>
                </div>
                <div class="modal-footer">
                  <button type="button" class="btn btn-secondary" data-dismiss="modal">
                    Close
                  </button>
                  <button type="button" class="btn btn-danger" id="btn-confirm-delete-employee">
                    Delete
                  </button>
                </div>
              </div>
            </div>
          </div>

          <!-- loading spinner -->
          <div id="loading-spinner" class="loading-overlay" style="display: none;">
            <div class="spinner-border text-primary" role="status">
              <span class="sr-only">Loading...</span>
            </div>
          </div>
        </div><!-- /.container-fluid -->
      </section>
      <!-- /.content -->
      <!-- /.content-wrapper -->
    </div>
  </div>

  <%- include('./partials/footer.ejs') %>
  
  <!-- jQuery -->
  <script src="/plugins/jquery/jquery.min.js"></script>
  <!-- jQuery UI 1.11.4 -->
  <script src="/plugins/jquery-ui/jquery-ui.min.js"></script>
  <!-- Bootstrap 4 -->
  <script src="/plugins/bootstrap/js/bootstrap.bundle.min.js"></script>
  <!-- DataTables  & Plugins -->
  <script src="/plugins/datatables/jquery.dataTables.min.js"></script>
  <script src="/plugins/datatables-bs4/js/dataTables.bootstrap4.min.js"></script>
  <script src="https://cdnjs.cloudflare.com/ajax/libs/js-cookie/3.0.1/js.cookie.min.js"></script>
  <!-- AdminLTE App -->
  <script src="/dist/js/adminlte.js"></script>
  <script src="/admin-src/employee.js" type="module"></script>
  <script src="/js/config.js"></script>
  <script src="/admin-src/left-menu.js"></script>
</body>

</html>