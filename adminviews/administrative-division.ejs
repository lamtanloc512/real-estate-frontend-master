<!DOCTYPE html>
<html lang="en">

<head>
  <meta charset="UTF-8" />
  <meta http-equiv="X-UA-Compatible" content="IE=edge" />
  <meta name="viewport" content="width=device-width, initial-scale=1.0" />
  <title>
    <%= title %>
  </title>
  <!-- Google Font: Source Sans Pro -->
  <link rel="stylesheet"
    href="https://fonts.googleapis.com/css?family=Source+Sans+Pro:300,400,400i,700&display=fallback" />
  <!-- Font Awesome -->
  <link rel="stylesheet" href="/plugins/fontawesome-free/css/all.min.css" />
  <!-- DataTables -->
  <link rel="stylesheet" href="/plugins/datatables-bs4/css/dataTables.bootstrap4.min.css" />
  <link rel="stylesheet" href="/plugins/datatables-responsive/css/responsive.bootstrap4.min.css" />
  <link rel="stylesheet" href="/plugins/datatables-buttons/css/buttons.bootstrap4.min.css" />
  <!-- Theme style -->
  <link rel="stylesheet" href="/dist/css/adminlte.min.css" />
  <link rel="stylesheet" href="/styles/styles.css">
</head>

<body>
  <div class="wrapper">

    <%- include('./partials/left-menu.ejs', { activePage: 'administrative-division' ,
      pageHeader: 'Administrative Division' }) %>

      <!-- Content Wrapper. Contains page content -->
      <div class="content-wrapper">

        <!-- Main content -->
        <section class="content pt-5">
          <div class="container-fluid">
            <h2 style="text-align: center">Administrative Division Management</h2>
            <div class="jumbotron container">
              <form id="inputform01" class="jumbotron container">
                <div class="row form-group align-items-center">
                  <div class="col-sm-2">
                    <label for="province-select">Province</label>
                  </div>
                  <div class="col-sm-2">
                    <select id="province-select" name="province" class="form-control">
                      <option disabled selected value>--Select Province--</option>
                    </select>
                  </div>
                  <div class="col-sm-8">
                    <div class="row align-items-center">
                      <div class="col-sm-4">
                        <button class="btn btn-success" id="btn-add-province" style="width: 100%;">Add Province</button>
                      </div>
                      <div class="col-sm-4">
                        <button class="btn btn-warning" id="btn-update-province" style="width: 100%;">Update Province</button>
                      </div>
                      <div class="col-sm-4">
                        <button class="btn btn-danger" id="btn-delete-province" style="width: 100%;">Delete Province</button>
                      </div>
                    </div>
                  </div>
                </div>
                <div class="row form-group align-items-center">
                  <div class="col-sm-2">
                    <label for="district-select">District</label>
                  </div>
                  <div class="col-sm-2">
                    <select id="district-select" name="district" class="form-control">
                      <option disabled selected value>--Select District--</option>
                    </select>
                  </div>
                  <div class="col-sm-8">
                    <div class="row align-items-center">
                      <div class="col-sm-4">
                        <button class="btn btn-success" id="btn-add-district" style="width: 100%;">Add District</button>
                      </div>
                      <div class="col-sm-4">
                        <button class="btn btn-warning" id="btn-update-district" style="width: 100%;">Update District</button>
                      </div>
                      <div class="col-sm-4">
                        <button class="btn btn-danger" id="btn-delete-district" style="width: 100%;">Delete District</button>
                      </div>
                    </div>
                  </div>
                </div>
                <div class="row form-group align-items-center">
                  <div class="col-sm-2">
                    <label for="ward-select">Ward</label>
                  </div>
                  <div class="col-sm-2">
                    <select id="ward-select" name="ward" class="form-control">
                      <option disabled selected value>--Select Ward--</option>
                    </select>
                  </div>
                  <div class="col-sm-8">
                    <div class="row align-items-center">
                      <div class="col-sm-4">
                        <button class="btn btn-success" id="btn-add-ward" style="width: 100%;">Add Ward</button>
                      </div>
                      <div class="col-sm-4">
                        <button class="btn btn-warning" id="btn-update-ward" style="width: 100%;">Update Ward</button>
                      </div>
                      <div class="col-sm-4">
                        <button class="btn btn-danger" id="btn-delete-ward" style="width: 100%;">Delete Ward</button>
                      </div>
                    </div>
                  </div>
                </div>
              </form>
            </div>
