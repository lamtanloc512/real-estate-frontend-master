<!DOCTYPE html>
<html lang="en">

<head>
  <meta charset="UTF-8" />
  <meta http-equiv="X-UA-Compatible" content="IE=edge" />
  <meta name="viewport" content="width=device-width, initial-scale=1.0" />
  <title>
    <%= title %>
  </title>
  <!-- Google Font: Source Sans Pro -->
  <link rel="stylesheet"
    href="https://fonts.googleapis.com/css?family=Source+Sans+Pro:300,400,400i,700&display=fallback" />
  <!-- Font Awesome -->
  <link rel="stylesheet" href="/plugins/fontawesome-free/css/all.min.css" />
  <!-- DataTables -->
  <link rel="stylesheet" href="/plugins/datatables-bs4/css/dataTables.bootstrap4.min.css" />
  <link rel="stylesheet" href="/plugins/datatables-responsive/css/responsive.bootstrap4.min.css" />
  <link rel="stylesheet" href="/plugins/datatables-buttons/css/buttons.bootstrap4.min.css" />
  <!-- Theme style -->
  <link rel="stylesheet" href="/dist/css/adminlte.min.css" />
  <link rel="stylesheet" href="/styles/styles.css">
</head>

<body>
  <div class="wrapper">
    
    <%- include('./partials/left-menu.ejs', 
              { activePage: 'project', 
              pageHeader: 'Project' }) %>

    <!-- Content Wrapper. Contains page content -->
    <div class="content-wrapper">

      <!-- Main content -->
      <section class="content pt-5">
        <div class="container-fluid">
          <h2 style="text-align: center">Project Management</h2>
          <div class="jumbotron container">
            <div class="row form-group">
              <div class="col-sm-3">
                <label for="input-name">Name</label>
              </div>
              <div class="col-sm-9">
                <input type="text" id="input-name" placeholder="Investor Name" class="form-control" />
              </div>
            </div>
            <div class="row form-group">
              <div class="col-sm-3">
                <label for="input-description">Description</label>
              </div>
              <div class="col-sm-9">
                <input type="text" id="input-description" name="description" placeholder="Description"
                  class="form-control" />
              </div>
            </div>
            <div class="row form-group pt-3 px-3 border rounded">
              <div class="col-sm-6">
                <div class="row form-group">
                  <div class="col-sm-3">
                    <label for="input-address">Address</label>
                  </div>
                  <div class="col-sm-9">
                    <input type="text" id="input-address" name="address" placeholder="Address" class="form-control" />
                  </div>
                </div>
                <div class="row form-group">
                  <div class="col-sm-3">
                    <label for="select-province">Province</label>
                  </div>
                  <div class="col-sm-9">
                    <select id="select-province" name="province" class="form-control">
                      <option disabled selected value>--Select Province--</option>
                    </select>
                  </div>
                </div>
              </div>
              <div class="col-sm-6">
                <div class="row form-group">
                  <div class="col-sm-3">
                    <label for="select-district">District</label>
                  </div>
                  <div class="col-sm-9">
                    <select id="select-district" name="district" class="form-control">
                      <option disabled selected value>--Select District--</option>
                    </select>
                  </div>
                </div>
                <div class="row form-group">
                  <div class="col-sm-3">
                    <label for="select-ward">Ward</label>
                  </div>
                  <div class="col-sm-9">
                    <select id="select-ward" name="ward" class="form-control">
                      <option disabled selected value>--Select Ward--</option>
                    </select>
                  </div>
                </div>
              </div>
            </div>
            <div class="row form-group">
              <div class="col-sm-3">
                <label for="input-acreage">Acreage</label>
              </div>
              <div class="col-sm-9">
                <input type="number" id="input-acreage" name="acreage" placeholder="Acreage" class="form-control" />
              </div>
            </div>
            <div class="row form-group">
              <div class="col-sm-3">
                <label for="input-construct-area">Construct Area</label>
              </div>
              <div class="col-sm-9">
                <input type="number" id="input-construct-area" name="construct-area" placeholder="Construct Area" class="form-control" />
              </div>
            </div>
            <div class="row form-group">
              <div class="col-sm-3">
                <label for="select-construction-contractor">Construction Contractor</label>
              </div>
              <div class="col-sm-9">
                <select id="select-construction-contractor" name="construction-contractor" class="form-control">
                  <option disabled selected value>--Select Construction Contractor--</option>
                </select>
              </div>
            </div>
            <div class="row form-group">
              <div class="col-sm-3">
                <label for="select-investor">Investor</label>
              </div>
              <div class="col-sm-9">
                <select id="select-investor" name="investor" class="form-control">
                  <option disabled selected value>--Select Investor--</option>
                </select>
              </div>
            </div>
            <div class="row form-group">
              <div class="col-sm-3">
                <label for="input-number-block">Number Block</label>
              </div>
              <div class="col-sm-9">
                <input type="number" id="input-number-block" name="number-block" placeholder="Number Block" class="form-control" />
              </div>
            </div>
            <div class="row form-group">
              <div class="col-sm-3">
                <label for="input-number-floor">Number Floors</label>
              </div>
              <div class="col-sm-9">
                <input type="text" id="input-number-floor" name="number-floor" placeholder="Number Floors" class="form-control" />
              </div>
            </div>
            <div class="row form-group">
              <div class="col-sm-3">
                <label for="input-slogan">Slogan</label>
              </div>
              <div class="col-sm-9">
                <input type="text" id="input-slogan" name="slogan" placeholder="Slogan" class="form-control" />
              </div>
            </div>
            <div class="row mb-3 pull-right">
              <div class="col-sm-12 d-flex justify-content-around">
                <button class="btn btn-primary" id="btn-create">
                  Create New Project
                </button>
                <button id="btn-update" class="btn btn-info">
                  Update Project
                </button>
              </div>
            </div>
          </div>
          <table class="table table-bordered table-striped table-hover text-center" id="project-table">
            <thead>
              <tr>
                <th>ID</th>
                <th>Name</th>
                <th>Description</th>
                <th>Address</th>
                <th>Acreage</th>
                <th>Construct Area</th>
                <th>Construction Contractor</th>
                <th>Investor</th>
                <th>Number Block</th>
                <th>Number Floors</th>
                <th>Slogan</th>
                <th>Action</th>
              </tr>
            </thead>
            <tbody></tbody>
          </table>
          <!-- Modal delete-->
          <div class="modal fade" id="modal-delete">
            <div class="modal-dialog">
              <div class="modal-content">
                <div class="modal-header">
                  <h5 class="modal-title text-danger">Delete confirmation</h5>
                  <button type="button" class="close" data-dismiss="modal" aria-label="Close">
                    <span aria-hidden="true">&times;</span>
                  </button>
                </div>
                <div class="modal-body">
                  <h6 class="text-danger">Are you sure you want to delete this project?</h6>
                </div>
                <div class="modal-footer">
                  <button type="button" class="btn btn-secondary" data-dismiss="modal">
                    Close
                  </button>
                  <button type="button" class="btn btn-danger" id="btn-confirm-delete">
                    Delete
                  </button>
                </div>
              </div>
            </div>
          </div>

          <!-- loading spinner -->
          <div id="loading-spinner" class="loading-overlay" style="display: none;">
            <div class="spinner-border text-primary" role="status">
              <span class="sr-only">Loading...</span>
            </div>
          </div>
        </div><!-- /.container-fluid -->
      </section>
      <!-- /.content -->
      <!-- /.content-wrapper -->
    </div>
  </div>
  <%- include('./partials/footer.ejs') %>
  <!-- jQuery -->
  <script src="/plugins/jquery/jquery.min.js"></script>
  <!-- jQuery UI 1.11.4 -->
  <script src="/plugins/jquery-ui/jquery-ui.min.js"></script>
  <!-- Bootstrap 4 -->
  <script src="/plugins/bootstrap/js/bootstrap.bundle.min.js"></script>
  <!-- DataTables  & Plugins -->
  <script src="/plugins/datatables/jquery.dataTables.min.js"></script>
  <script src="/plugins/datatables-bs4/js/dataTables.bootstrap4.min.js"></script>
  <script src="https://cdnjs.cloudflare.com/ajax/libs/js-cookie/3.0.1/js.cookie.min.js"></script>
  <!-- AdminLTE App -->
  <script src="/dist/js/adminlte.js"></script>
  <script src="/admin-src/project.js" type="module"></script>
  <script src="/js/config.js"></script>
  <script src="/admin-src/left-menu.js"></script>
</body>

</html>