<!DOCTYPE html>
<html lang="en">

<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Properties List</title>
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/css/bootstrap.min.css" rel="stylesheet">
    <link href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.0.0-beta3/css/all.min.css" rel="stylesheet">
    <script src="https://ajax.googleapis.com/ajax/libs/jquery/3.6.0/jquery.min.js"></script>
    <link href="https://fonts.googleapis.com/css2?family=Inter&family=Roboto&display=swap" rel="stylesheet">
    <script src="https://cdnjs.cloudflare.com/ajax/libs/js-cookie/3.0.1/js.cookie.min.js"></script>
    <link rel="stylesheet" href="/css/styles.css">
    <link rel="stylesheet" href="/css/responsive.css">
    <script src="/src/js/headerHandler.js" type="module" defer></script>
    <script src="/src/js/userInfoHandler.js" type="module" defer></script>
    <script src="/js/config.js"></script>
    <title>
        <%= title %>
    </title>

</head>

<body>

    <%- include('../partials/header.ejs') %>
        <%- include('../partials/subpage-banner.ejs', {pageTitle: 'User Information' }) %>

            <section class="user-info">
                <div class="container">
                    <h2 class="my-4">User Information</h2>
                    <p id="user-name">Name:</p>
                    <p id="user-email">Email:</p>
                    <p id="user-phone">Phone:</p>
                    <p id="user-address">Address:</p>
                </div>
                <hr>
                <div class="container">
                    <h2 class="my-4">Reset Password</h2>
                    <form id="form-change-password">
                        <div class="form-group">
                            <input type="password" id="input-old-password" class="form-control w-25 mb-2" placeholder="Old Password">
                        </div>
                        <div class="form-group">
                            <input type="password" id="input-new-password" class="form-control w-25 mb-2" placeholder="New Password">
                        </div>
                        <div class="form-group">
                            <input type="password" id="input-confirm-password" class="form-control w-25" placeholder="Confirm New Password">
                        </div>
                        <div class="form-group contact-form-btn my-4">
                            <button type="submit" class="btn btn-success btn-submit text-white">Change Password</button>
                        </div>
                    </form>
                </div>
                
            </section>
            <%- include('../partials/error-modal.ejs') %>
            <!-- *************** footer **************** -->
            <%- include('../partials/footer.ejs') %>

                <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/js/bootstrap.bundle.min.js"></script>
</body>

</html>